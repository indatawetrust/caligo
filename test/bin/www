const Koa = require('koa');
const app = new Koa();

import { h } from 'preact';
import render from 'preact-render-to-string';

let div = <div style="background-color:#9d8;padding:10px">
  {
    Array(10).fill(1).map((i,j) => <span
style={`font-size:${j*10+10}px;color:#${j}${j}${j}`}>{j}</span>)
  }
</div>;

// response
app.use(ctx => {
  ctx.body = render(div);
});

app.listen(3000);

module.exports = app;
